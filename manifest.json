{
    "name": "Auto Swiper",
    "version": "2.0",
    "description": "Automate swiping on Tinder and Bumble.",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.tinder.com/*",
                "*://*.tinder.com/*",
                "https://bumble.com/*",
                "*://*.bumble.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "host_permissions": [
        "https://www.tinder.com/*",
        "*://*.tinder.com/*",
        "https://bumble.com/*",
        "*://*.bumble.com/*"
    ]
}
